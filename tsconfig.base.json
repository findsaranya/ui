{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tt-webapp/service": ["libs/service/src/index.ts"],
      "@findsaranya/ui": ["libs/ui/src/index.ts"],
      "@findsaranya/ui/button": ["libs/ui/button/src/index.ts"],
      "@findsaranya/ui/checkbox": ["libs/ui/checkbox/src/index.ts"],
      "@findsaranya/ui/radio": ["libs/ui/radio/src/index.ts"],
      "@findsaranya/ui/form-field": ["libs/ui/form-field/src/index.ts"],
      "@findsaranya/ui/input": ["libs/ui/input/src/index.ts"],
      "@findsaranya/ui/textarea": ["libs/ui/textarea/src/index.ts"],
      "@findsaranya/ui/autocomplete": ["libs/ui/autocomplete/src/index.ts"],
      "@findsaranya/ui/option": ["libs/ui/option/src/index.ts"],
      "@findsaranya/ui/select": ["libs/ui/select/src/index.ts"],
      "@findsaranya/ui/file": ["libs/ui/file/src/index.ts"],
      "@findsaranya/ui/failed-to-load-application": [
        "libs/ui/failed-to-load-application/src/index.ts"
      ],
      "@findsaranya/ui/not-subscribed": ["libs/ui/not-subscribed/src/index.ts"],
      "@findsaranya/ui/page-not-found": ["libs/ui/page-not-found/src/index.ts"],
      "@findsaranya/ui/unauthorized": ["libs/ui/unauthorized/src/index.ts"],
      "@findsaranya/ui/sidebar": ["libs/ui/sidebar/src/index.ts"],
      "@findsaranya/ui/modal": ["libs/ui/modal/src/index.ts"],
      "@findsaranya/ui/prompt-modal": ["libs/ui/prompt-modal/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
